<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LoginBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink"
    android:orientation="vertical"
    tools:context="com.example.jeon.diary.Login"
    android:gravity="center_horizontal">


    <Space
        android:layout_width="match_parent"
        android:layout_height="126dp" />

    <ImageView
        android:id="@+id/loginImageView"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@drawable/padlock" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="나의 친구라면, 비밀번호를 알겠지?"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/passWord"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.7"
            android:hint="비밀번호 6자리  \n(초기 비밀번호 : 000000 )"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textAlignment="center" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/passWord"
            android:layout_marginStart="34dp"
            android:layout_weight="1"
            android:background="@drawable/key"
            android:textSize="10sp" />

        <Button
            android:id="@+id/forgat"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/passWord"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/loginButton"
            android:layout_weight="1"
            android:background="@drawable/search"
            android:textSize="10sp" />
    </RelativeLayout>


</LinearLayout>
